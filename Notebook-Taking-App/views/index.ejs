                <form action="/update/<%= encodeURIComponent(editFile.filename) %>" method="post">
                    <input class="block w-full rounded-md px-6 py-2 bg-zinc-800 text-white" type="text" name="title" value="<%= editFile.filename.replace('.txt', '') %>" required>
